@using BootstrapSupport
@model System.Collections.IEnumerable   
    <h4>@Model.GetLabel() <small>Listing</small></h4>
<table class="table table-striped" id="data-table">
    <caption></caption>
    <thead>
        <tr>
            @foreach (var property in Model.VisibleProperties())
            {
                <th>
                    @property.GetLabel().ToSeparatedWords()
                </th>
            }
            <th></th>
        </tr>
    </thead>
    @{ int index = 0; } 
    @foreach (var model in Model)
    {
        ViewData[index.ToString()] = model;
        <tr>
            @foreach (var property in model.VisibleProperties())
            {
                <td>
                    <span id='@(model.GetId() + "__" + property.Name)'>
                              @Html.Display(index + "." + property.Name)
                    </span>
                </td>                    
            }
            <td>
                @Html.ActionLink("Complete", "Complete", "Home", model.GetId(), new {id = "complete__" + model.GetId(), @class="btn"})
                <div class="btn-group">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                        Action
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        @{
                            @Html.TryPartial("_actions", model)                            
                            var routevalues = model.GetIdValue();  
                            <li>@Html.ActionLink("Edit", "Edit", "Home", routevalues, null)</li>
                            <li>@Html.ActionLink("Details", "Details", "Home", routevalues, null)</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Delete", "Delete", "Home", routevalues, null)</li>
                               
                        }
                    </ul>
                </div>

            </td>
        </tr>
            index++;
    }

</table>
<p>
    @Html.ActionLink("Create New", "Create", "Home", null, new {@class = "btn", id = "add-task"})
</p>

